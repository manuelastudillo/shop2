<div class="row">
	<div class="col-md-6 col md-offset-3">
		<h1>Profile</h1>

		<% user = current_user %>

		<table class="table">
			<tr>
				<th>Name</th>
				<td><%= user.nombre %></td>
			</tr>
			<tr>
				<th>Email</th>
				<td><%= user.email %></td>
			</tr>
 			<tr>
				<th>Direccion</th>
				<td><%= user.calle %></td>
			</tr>
			 <tr>
				<th>Telefono</th>
				<td><%= user.telefono %></td>
			</tr>
			<tr>
				<th>Comuna</th>
				<td><%= user.comuna.nombre %></td>
			</tr>
			<tr>
				<th>Fecha de ingreso</th>
				<td><%= user.fechaingreso %></td>
			</tr>
			 <tr>
				<th>Sueldo</th>
				<td><%= user.sueldo %></td>
			</tr>
			<tr>
				<th>Rut</th>
				<td><%= user.rut %></td>
			</tr>
		</table>
	</div>
</div>