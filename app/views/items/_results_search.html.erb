<table class="table">
  <thead>
    <tr>
      <%= render partial: "pager", locals: { keywords: @keywords, page: @page } %>
    </tr>
    <tr>
      <th>Nombre</th>
      <th>Código</th>
      <th>Stock</th>
      <th>Stock Mínimo</th>
      <th>Unidad</th>
      <th>Categoría</th>
      <th>Marca</th>
      <th>Precio</th>
      <th>Fecha de Alta</th>
      <th>Fecha de Modificación</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.nombre %></td>
        <td><%= item.codigo %></td>

        <td><%= item.stock %></td>
        <td><%= item.min_stock %></td>
        <td><%= item.unit ? item.unit.nombre : '' %></td>
        <td><%= item.category ? item.category.nombre : '' %></td>
        <td><%= item.brand ? item.brand.nombre : '' %></td>
        <td><%= number_to_currency(item.precio) %></td>
        <td><%= item.created_at.strftime("%d/%m/%Y") %></td>
        <td><%= item.updated_at.strftime("%d/%m/%Y") %></td>
        <td>
          <%= button_to edit_item_path(item), {method: :get, class: "btn btn-info"} do %>
            <span class="glyphicon glyphicon-pencil" aria-hidden="true"> </span> Editar
          <% end %>
        </td>
        <td>
          <%= button_to item, { method: :delete, data: { confirm: '¿Está seguro?' }, class: "btn btn-danger" } do %>
            <span class="glyphicon glyphicon-trash" aria-hidden="true"> </span> Eliminar
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>